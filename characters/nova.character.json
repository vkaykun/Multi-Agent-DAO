        "permissions": [
            "manage_profiles",
            "track_reputation",
            "view_activities"
        ],
        "settings": {
            "defaultVotingPower": 1,
            "reputationDecayRate": 0.1,
            "minReputation": 0,
            "maxReputation": 1000,
            "activityWeights": {
