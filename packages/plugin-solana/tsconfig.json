{
    "extends": "../core/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "types": ["node"],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "module": "ESNext",
        "allowImportingTsExtensions": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
